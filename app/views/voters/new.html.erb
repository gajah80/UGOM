<div class="container">
    <div class="row top-padding">
        <%= simple_form_for(@voter) do |f| %>

            <!--Maklumat peribadi start-->
            <div class="head col-md-12"><h1><strong>MAKLUMAT PERIBADI PENGUNDI</strong></h1></div>
            <div class="bord gap3 col-md-12">
              <div class="col-md-6"><%= f.input :name, label: "Nama :" %></div>
              <div class="col-md-2"><%= f.input :no_siri, label: "Nombor siri :" %></div>
              <div class="col-md-2"><%= f.input :jantina, label: "Jantina", collection: ["Lelaki", "Perempuan"], prompt: "--- Pilih Jantina ---"   %></div>
              <div class="col-md-2">
                  <%= f.association :bangsa, prompt: "--- Bangsa ---" %>
                  <small>
                  <%= link_to "Lain-lain","", data: {toggle: "modal", target: "#myModal"}  %>
                  </small>
              </div><!-- end of col-md-2 -->
              <div class="col-md-4"><%= f.input :old_ic, label: "Nombor Kad Pengenalan Lama :" %></div>
              <div class="col-md-4"><%= f.input :new_ic, label: "Nombor Kad Pengenalan Baru :" %></div>
              <div class="col-md-4"><%= f.input :dob, label: "Tarikh Lahir :", order: [:day, :month, :year], start_year: Time.now.year-100 %></div>
              <div class="col-md-4"><%= f.input :saluran, label: "Saluran Mengundi :" %></div>
              <div class="col-md-6"><%= f.input :tempat_mengundi, label: "Tempat Mengundi :" %></div>
              <div class="gap2 col-md-2"><strong>Status Baru :</strong><br/><%= f.collection_radio_buttons :status_baru, [[true, 'Ya'] ,[false, 'Tidak']], :first, :last, input_html:{class: "radio radio-inline"}%></div> 
            </div>
            <!--Maklumat peribadi end-->
            
            <!-- Alamat start-->
            <div class="head col-md-12"><h3><strong>ALAMAT</strong></h3></div>
              <div class="bord col-md-6 gap3"><h4><strong>Alamat Umno :</strong></h4>
                <div><%= f.input :umno_alamat1, label: false %></div>
                <div><%= f.input :umno_alamat2, label: false %></div>
                <div><%= f.input :umno_alamat3, label: false %></div>
                <div class="row">
                  <div class="col-md-4"><%= f.input :umno_poskod, label: "Poskod :" %></div>
                  <div class="col-md-8"><%= f.input :umno_daerah, label: "Daerah :" %></div>
                </div>
                <div class="row">
                  <div class="col-md-8"><%= f.input :umno_negeri, label: "Negeri :" %></div>
                </div>          
              </div>
              <div class="bord col-md-6 gap3"><h4><strong>Alamat JPN :</strong></h4>
                <div><%= f.input :jpn_alamat1, label: false %></div>
                <div><%= f.input :jpn_alamat2, label: false %></div>
                <div><%= f.input :jpn_alamat3, label: false %></div>
                <div class="row">
                  <div class="col-md-4"><%= f.input :jpn_poskod, label: "Poskod :" %></div>
                  <div class="col-md-8"><%= f.input :jpn_daerah, label: "Daerah :" %></div>
                </div>
                <div class="row">
                  <div class="col-md-8"><%= f.input :jpn_negeri, label: "Negeri :" %></div>
                </div>
              </div>
            <!-- Alamat end-->

            <!-- Maklumat start-->
            <div class="head col-md-12"><h3><strong>MAKLUMAT PARTI</strong></h3></div>
            <div class="bord col-md-6 gap3 bord-height"><h4><strong>Keahlian UMNO</strong></h4>
              
              <div class="row">
                <div class="col-md-12">
                  <div class="gap2 col-md-12"><strong>Status Keahlian UMNO :</strong><br/><%= f.collection_radio_buttons :umno_status, [[true, 'Ahli UMNO'] ,[false, 'Bukan Ahli Umno']], :first, :last, input_html:{class: "radio radio-inline"}%></div> 
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-6"><%= f.input :umno_kod_negeri, label: "Kod Negeri :" %></div>
                  <div class="col-md-6"><%= f.input :umno_kod_bahagian, label: "Kod Bahagian :" %></div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-4"><%= f.input :umno_kod_cawangan, label: "Kod Cawangan :" %></div>
                  <div class="col-md-8"><%= f.input :umno_nama_cawangan, label: "Nama Cawangan :" %></div>
                </div>
              </div>
              
              
            </div>
            <div class="bord col-md-6 gap3 bord-height"><h4><strong>Maklumat PRU 13</strong></h4>
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-12"><%= f.input :pru13_negeri, label: "Negeri :" %></div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-4"><%= f.input :pru13_kod_parlimen, label: "Kod Parlimen :" %></div>
                  <div class="col-md-8"><%= f.input :pru13_parlimen, label: "Nama Parlimen :" %></div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-12"><%= f.input :pru13_kod_lokaliti, label: "Kod Lokaliti :" %></div>
                </div>
              </div>
            </div>
            <!-- Maklumat start-->
            
            <br/>
            <div class="col-md-12 foot">
              <%= f.submit "Save", class: "btn btn-primary button1"%>
            </div>
        <% end %> 

        <%= simple_form_for Bangsa.new, method: :post do |f| %>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                      </div>
                      <div class="modal-body">
                       
                            <%= f.input :name %>
                      </div>
                      <div class="modal-footer">
                        <%= f.submit "Save", class: "btn btn-info" %>
                      </div>
                      
                    </div>
                  </div>
                </div><!--end of modal -->
                 <% end %>         
    </div>
</div>

