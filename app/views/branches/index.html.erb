<div class="container">
    <div class="row top-padding">
        <% @branches.each do |branch| %>
            <% @bil = @bil + 1 %>
            <div class="col-md-12">
                <div class="col-md-1"><%= @bil %></div>
                <div class="col-md-5"><%= branch.name %></div>
                <div class="col-md-6 btn-group">
                    <%= link_to "Edit", edit_branch_path(branch), class: "btn btn-primary btn-sm"  %>
                    <%= link_to "Padam", branch, method: :delete, data: {confirm: "Anda pasti?"}, class: "btn btn-danger btn-sm"  %>
                </div>
            </div><br /><br />
        <% end %>
    </div>
</div>